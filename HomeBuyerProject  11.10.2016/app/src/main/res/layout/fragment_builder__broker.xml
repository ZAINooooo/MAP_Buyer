<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asad.homebuyerproject.Builder_Broker_Fragment"

    >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:id="@+id/Panel"
        android:orientation="vertical">




        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:paddingTop="20dp"
            android:text="@string/ShowCase1"
            android:textSize="20sp"
            android:textStyle="normal"
            android:id="@+id/text1"/>



        <Button

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:background="@drawable/rectanglebutton"
            android:id="@+id/Login"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_below="@+id/text1"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Need Help ?"
            android:layout_below="@+id/Readytogo"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:id="@+id/text2"/>



        <Button
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:background="@drawable/rectanglbuttongrey"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_below="@+id/text2"/>



    </LinearLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanglesmallcorner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:id="@+id/panel2">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/Company_name"
        android:hint="Company Name"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:background="@drawable/rectanglewithoutcorners"
        />
        <View

            android:id="@+id/asad"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="#E0E0E0"
            android:layout_below="@+id/Company_name"


            />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/Company_detail"
        android:hint="Write About your Company"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:background="@drawable/rectanglewithoutcorners"
        android:layout_below="@+id/asad" />

        <View
            android:id="@+id/asad1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="#E0E0E0"
            android:layout_below="@+id/Company_detail"


            />

    <EditText

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/Company_address"
        android:hint="Company Address"
        android:singleLine="false"
        android:inputType="textCapWords"
        android:layout_below="@+id/asad1"
        android:background="@drawable/rectanglewithoutcorners"/>

        <View
            android:layout_marginTop="5dp"
            android:id="@+id/asad12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="#E0E0E0"
            android:layout_below="@+id/Company_address"

            />



    <AutoCompleteTextView

        android:layout_below="@+id/asad12"
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="City"
        android:background="@drawable/rectanglewithoutcorners">
        <requestFocus />
    </AutoCompleteTextView>
        <View


            android:id="@+id/asad123"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="#E0E0E0"
            android:layout_below="@+id/city"

            />

    </RelativeLayout>


        <Button

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:background="@drawable/rectanglebutton"
            android:id="@+id/Next"
            android:textColor="#FFFFFF"
            android:textSize="18sp"

            />



</RelativeLayout>

</ScrollView>

