<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asad.homebuyerproject.OwnerFreagment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frag1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.asad.homebuyerproject.OwnerFreagment">

        <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:id="@+id/panel2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="150dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Test" />


            <AutoCompleteTextView
                android:layout_marginTop="100dp"
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectanglesmallcorner"
                android:ems="10"
                android:hint="City">

                <requestFocus />
            </AutoCompleteTextView>


            <Button
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Next"
                android:background="@drawable/rectanglebutton"
                android:id="@+id/Next"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="100dp"
            android:id="@+id/panel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:text="I am"
                android:textColor="#FFFFFF" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectanglesmallcorner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="Owner"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#616161"
                    android:id="@+id/radio0" />


                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_height="50dp"
                    android:text="Builder"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textColor="#616161"
                    android:id="@+id/radio1" />


                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_height="50dp"
                    android:text="Agent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textColor="#616161"
                    android:id="@+id/radio2" />


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectanglesmallcorner"
                android:orientation="vertical"
                >


                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#9E9E9E"
                    android:textColorHint="#9E9E9E"
                    android:background="@drawable/rectanglewithoutcorners"/>

                <View
                    android:id="@+id/asad12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Company_address"
                    android:layout_gravity="start"
                    android:background="#E0E0E0"

                    />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#9E9E9E"
                    android:textColorHint="#9E9E9E"
                    android:background="@drawable/rectanglewithoutcorners"/>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Company_address"
                    android:layout_gravity="start"
                    android:background="#E0E0E0"

                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#9E9E9E"
                    android:textColorHint="#9E9E9E"
                    android:background="@drawable/rectanglewithoutcorners"/>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectanglesmallcorner"
                    app:defaultNameCode="PK" />


                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/mobile"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/ccp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/ccp"
                    android:background="@drawable/rectanglesmallcorner"
                    android:hint="Number"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#9E9E9E"
                    android:textColorHint="#9E9E9E" />


            </RelativeLayout>


            <Button
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Continue"
                android:layout_gravity="bottom"
                android:background="@drawable/rectanglebutton"
                android:layout_alignParentBottom="true"
                android:id="@+id/Readytogo"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>
